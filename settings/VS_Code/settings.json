{
  "window.zoomLevel": 0.6,
  "editor.fontSize": 12,
  "debug.console.fontSize": 12,
  "chat.editor.fontSize": 12,
  "markdown.preview.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "workbench.editor.closeOnFileDelete": true,
  "files.autoGuessEncoding": false,
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.autoIndent": "brackets",
  "editor.detectIndentation": false,
  "editor.minimap.scale": 1,
  "editor.minimap.showSlider": "always",
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 10,
  "editor.renderControlCharacters": false,
  "editor.experimentalWhitespaceRendering": "font",
  "editor.padding.top": 30,

  "editor.quickSuggestions": {
    "other": "off"
  },

  // Global defaults â€“ apply to every file
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,

  // Overrides
  "[python]": {
    "editor.tabSize": 4
  },
  "[sql]": {
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.trimAutoWhitespace": false
  },

  "terminal.integrated.lineHeight": 1,
  "git.ignoreLimitWarning": true,
  "accessibility.underlineLinks": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true
  },

  // "CodeGPT.apiKey": "CodeGPT Plus Beta",
  // Optional: set your CodeGPT API key in local settings.json (not committed)
  "CodeGPT.apiKey": "YOUR_API_KEY_HERE"
}
